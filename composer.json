{
    "name": "dcorralf/demo-cognito-app",
    "type": "project",
    "description": "Aplicación de ejemplo Laravel 12 con autenticación y gestión de usuarios mediante AWS Cognito.",
    "require": {
        "php": "^8.4",
        "ellaisys/aws-cognito": "dev-master",
        "guzzlehttp/guzzle": "^7.8",
        "laravel/framework": "^12.0"
    },
    "require-dev": {
        "fakerphp/faker": "^1.21",
        "phpunit/phpunit": "^10.2",
        "laravel/breeze": "^2.0"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/dcorralf/aws-cognito-php"
        }
    ],
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": [
            "database/seeders",
            "database/factories"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
